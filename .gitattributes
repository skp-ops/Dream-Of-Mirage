# default behavior for all files
* text=auto eol=lf

# Godot core files
*.godot text eol=lf
*.tscn  text eol=lf
*.tres  text eol=lf
*.import text eol=lf

# C# src files
*.cs    text eol=lf
*.csproj text eol=lf
*.sln    text eol=lf

# Script files
*.sh     text eol=lf
*.json   text eol=lf
*.yml    text eol=lf
*.yaml   text eol=lf
*.toml   text eol=lf
*.xml    text eol=lf

# windows script files
*.bat    text eol=crlf
*.cmd    text eol=crlf

# binary files
*.png    binary
*.jpg    binary
*.jpeg   binary
*.gif    binary
*.mp3    binary
*.ogg    binary
*.wav    binary
*.ttf    binary
*.otf    binary
*.dll    binary
*.exe    binary
*.pck    binary
